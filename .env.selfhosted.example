# ============================================================================
# Self-Hosted Supabase Configuration
# ============================================================================

# PostgreSQL Database
POSTGRES_DB=babsy_vouchers
POSTGRES_USER=postgres
POSTGRES_PASSWORD=ChangeThisSecurePassword123!

# pgAdmin
PGADMIN_EMAIL=admin@babsy.ch
PGADMIN_PASSWORD=SecurePgAdminPassword123!

# JWT Secrets (GENERATE NEW ONES!)
JWT_SECRET=your-super-secret-jwt-key-minimum-32-characters-long-change-this
JWT_REFRESH_SECRET=your-super-secret-refresh-key-minimum-32-characters-long-change-this

# Redis
REDIS_PASSWORD=SecureRedisPassword123!

# Application
ALLOWED_ORIGINS=http://localhost:8080,https://yourdomain.com
LOG_LEVEL=info
BCRYPT_ROUNDS=12
SESSION_DURATION_DAYS=7
ACCESS_TOKEN_DURATION=15m

# Grafana (Optional - for monitoring)
GRAFANA_USER=admin
GRAFANA_PASSWORD=SecureGrafanaPassword123!

# Email (Exchange Online / Microsoft 365)
# Authentication Method: 'basic' or 'oauth2' (oauth2 recommended)
EMAIL_AUTH_METHOD=basic

SMTP_HOST=smtp.office365.com
SMTP_PORT=587
SMTP_USER=your-email@yourdomain.com
EMAIL_FROM_NAME=Babsy Partnergutscheine
FRONTEND_URL=http://localhost:8080

# Basic Authentication (EMAIL_AUTH_METHOD=basic)
# App-Passwort erstellen: https://account.microsoft.com/security
SMTP_PASSWORD=your-app-password-or-password

# OAuth 2.0 Authentication (EMAIL_AUTH_METHOD=oauth2) - EMPFOHLEN
# Setup-Anleitung: siehe backend/OAUTH2-EXCHANGE-SETUP.md
# Azure App Registration erforderlich
AZURE_CLIENT_ID=12345678-1234-1234-1234-123456789abc
AZURE_CLIENT_SECRET=your-azure-client-secret
AZURE_TENANT_ID=87654321-4321-4321-4321-cba987654321

# Optional: OAuth Token Caching (falls bereits vorhanden)
# AZURE_REFRESH_TOKEN=
# AZURE_ACCESS_TOKEN=
# AZURE_TOKEN_EXPIRES=
