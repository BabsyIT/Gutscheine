# Database Configuration (Supabase)
DATABASE_URL="postgresql://postgres:[YOUR-PASSWORD]@db.[YOUR-PROJECT-REF].supabase.co:5432/postgres"

# JWT Configuration
JWT_SECRET="your-super-secret-jwt-key-min-32-characters-change-in-production"
JWT_REFRESH_SECRET="your-super-secret-refresh-key-min-32-characters-change-in-production"

# Server Configuration
PORT=3000
NODE_ENV="development"
ALLOWED_ORIGINS="http://localhost:8080,https://babsyit.github.io"

# Email Configuration (Exchange Online / Microsoft 365)
# Authentication Method: 'basic' or 'oauth2' (oauth2 recommended)
EMAIL_AUTH_METHOD="basic"

SMTP_HOST="smtp.office365.com"
SMTP_PORT="587"
SMTP_USER="your-email@yourdomain.com"
EMAIL_FROM_NAME="Babsy Partnergutscheine"

# Basic Authentication (EMAIL_AUTH_METHOD=basic)
# App-Passwort erstellen: https://account.microsoft.com/security
SMTP_PASSWORD="your-app-password-or-password"

# OAuth 2.0 Authentication (EMAIL_AUTH_METHOD=oauth2) - EMPFOHLEN
# Setup-Anleitung: siehe OAUTH2-EXCHANGE-SETUP.md
# Azure App Registration erforderlich
AZURE_CLIENT_ID="12345678-1234-1234-1234-123456789abc"
AZURE_CLIENT_SECRET="your-azure-client-secret"
AZURE_TENANT_ID="87654321-4321-4321-4321-cba987654321"

# Optional: OAuth Token Caching (falls bereits vorhanden)
# AZURE_REFRESH_TOKEN=""
# AZURE_ACCESS_TOKEN=""
# AZURE_TOKEN_EXPIRES=""

# Frontend URL (for email links)
FRONTEND_URL="http://localhost:8080"

# Logging
LOG_LEVEL="info"

# Security
BCRYPT_ROUNDS=12
SESSION_DURATION_DAYS=7
ACCESS_TOKEN_DURATION="15m"
